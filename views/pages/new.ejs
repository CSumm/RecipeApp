<% include ../partials/header %>

<h1 class="ui center aligned header">New Recipe</h1>
<div class="ui container">
<form class="ui form container" action="/recipe" method="POST">
  <div class="field">
      <label for="title"> Title
    <input type="text" id="title"  name="recipe[title]" required />
</label>
</div>
  <div class="field">
      <label for="image"> Image URL
    <input type="text" id="image" name="recipe[image]" required />
</label>  
</div>
  <div class="field">
        <label for="ingredients"> Ingredients
    <input
    id="ingredients"
      type="text"
      name="recipe[ingredients]"
      required
    />
    </label>
  </div>
  <div class="field">
  <label for="instructions">Instructions</label>
  <textarea
    cols="50"
    rows="20"
   id="instructions"
    name="recipe[instructions]"
    required
  ></textarea>
</div>
  <div class="field">
      <label for="cooking-time">Cooking Time</label>
    <input
      type="number"
      id="cooking-time"
      name="recipe[cookingTime]"
      min="1"
    />
  </div>
  <input class="large ui positive basic button right floated" type="submit" />
</form>
<input class="medium ui negative basic button left floated" type=submit onclick="location.href='/recipe/';" value="Cancel" />
</div>
<%include ../partials/footer %>
